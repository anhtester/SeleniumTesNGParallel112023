<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Suite Parallel Testing" verbose="1">
    <test name="Parallel Testing in POM 1" parallel="methods">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="com.anhtester.PageObjectModel.testcases.LoginTest"/>
        </classes>
    </test>

    <test name="Parallel Testing in POM 2" parallel="methods">
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="com.anhtester.PageObjectModel.testcases.DashboardTest"/>
        </classes>
    </test>

    <test name="Parallel Testing in POM 3" parallel="methods">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="com.anhtester.PageObjectModel.testcases.CustomerTest"/>
        </classes>
    </test>
</suite>